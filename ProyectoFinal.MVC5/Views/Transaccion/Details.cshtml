        </dt>

        <dd>
            @Html.DisplayFor(model => model.TerceroTransaccion.Apellido)
        </dd>

        <dt>
            @Html.DisplayName("Numero de Factura")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FacturaTransaccion.NumeroFactura)
        </dd>

        <dt>
            @Html.DisplayName("Tipo de Transaccion")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoTransacciones.Descripcion)
