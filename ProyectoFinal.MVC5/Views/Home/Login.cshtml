@using System.Web.Mvc.Html
@using System.Web.UI.WebControls
@model ProyectoFinal.MVC5.ViewModels.UsuarioViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html style="background-color:#68c3a3">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/Login.css")
</head>
<body>

    @using (Html.BeginForm())
    {

       @Html.ValidationSummary(true)

<div class="login">


        @Html.DropDownList("EmpresaId", (IEnumerable<SelectListItem>)ViewBag.EmpresaID, new { @class = "dropdown" })
        @Html.TextBoxFor(m => m.NombreUsuario, new { @id = "username" , @placeholder="Nombre de Usuario" })
    

    
    @Html.TextBoxFor(m => m.Password, new { @id = "password" , @placeholder="Contraseña"})
    <a href="#" class="forgot">Olvido la contraseña?</a>
    <input type="submit" value="Ingresar">
</div>
    <div class="shadow"></div>

        
    }        
</body>
</html>
